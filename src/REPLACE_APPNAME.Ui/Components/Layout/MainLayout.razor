@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Primary" Dense="true" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       @onclick="ToggleSideBar"/>
        <MudSpacer/>
        <MudIconButton Class="mr-4"
                       Icon="@Icons.Material.Filled.Notifications"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       Size="Size.Medium"
                       @onclick="ToggleNotificationsBar"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_sideBarOpen"
               ClipMode="DrawerClipMode.Always"
               Variant="DrawerVariant.Responsive">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
    <MudDrawer @bind-Open="_notificationsBarOpen"
               Width="20%"
               ClipMode="DrawerClipMode.Always"
               Variant="DrawerVariant.Temporary"
               Anchor="Anchor.Right"
               Overlay="false">
        <MudStack AlignItems="AlignItems.Center">
            <MudSpacer/>
            <MudAlert Severity="Severity.Info"
                      ContentAlignment="HorizontalAlignment.Center"
                      Dense="true">
                Coming soon.
            </MudAlert>
            <MudSpacer/>
        </MudStack>
    </MudDrawer>
    <MudScrollToTop>
        <MudFab Color="Color.Primary"
                IconSize="Size.Large"
                Size="Size.Large"
                StartIcon="@Icons.Material.Filled.ArrowUpward"/>
    </MudScrollToTop>
</MudLayout>

@code {

    private bool _sideBarOpen = true;

    private bool _notificationsBarOpen;

    private void ToggleSideBar()
    {
        _sideBarOpen = !_sideBarOpen;
    }

    private void ToggleNotificationsBar()
    {
        _notificationsBarOpen = !_notificationsBarOpen;
    }

}