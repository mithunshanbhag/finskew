@page "/gratuitycalculator"
@page "/gratuitycalc"
@page "/gratuity-calculator"
@page "/gratuity-calc"
@page "/gratuity"

@inject ICalculator<GratuityInputViewModel, GratuityResultViewModel> Calculator

<PageTitle>Gratuity Calculator</PageTitle>

<PageHeader BreadcrumbItems="@(
                             [
                                 new BreadcrumbItem("Calculators", "#"),
                                 new BreadcrumbItem("Gratuity", null, true)
                             ])"
            ActionButtonHidden="true"/>

<MudStack Row="true"
          Wrap="Wrap.Wrap"
          Style="background-color:#FFFFFF;">
    <MudPaper class="pa-3 mx-3 rounded-lg"
              Style="background-color:#FAFAFA;"
              Elevation="0"
              role="region"
              aria-label="Input parameters">
        <MudStack Row="true">
            <MudStack Row="true">
                <MudForm @bind-IsValid="_isFormValid"
                         Model="_inputViewModel"
                         aria-label="Gratuity calculation inputs">
                    <MudNumericField T="int"
                                     Culture="@(CultureInfo.GetCultureInfo("en-In"))"
                                     Format="N0"
                                     Margin="Margin.Dense"
                                     Adornment="Adornment.Start"
                                     AdornmentColor="Color.Tertiary"
                                     AdornmentIcon="@Icons.Material.Filled.CurrencyRupee"
                                     IconSize="Size.Small"
                                     Label="Salary (Basic + DA)"
                                     Variant="Variant.Outlined"
                                     @bind-Value="_inputViewModel.Salary"
                                     Min="10000"
                                     Max="100000000"
                                     Step="1000"
                                     HelperText="Enter salary between ₹10,000 and ₹10,00,00,000"
                                     aria-label="Salary basic and dearness allowance in Indian Rupees"
                                     Class="mb-4"/>
                    <MudNumericField T="int"
                                     Margin="Margin.Dense"
                                     Adornment="Adornment.Start"
                                     AdornmentColor="Color.Tertiary"
                                     AdornmentIcon="@Icons.Material.Filled.AccessTime"
                                     IconSize="Size.Small"
                                     Label="Years of Service"
                                     Variant="Variant.Outlined"
                                     @bind-Value="_inputViewModel.YearsOfService"
                                     Immediate="true"
                                     DebounceInterval="200"
                                     Step="1"
                                     Min="5"
                                     Max="50"
                                     HelperText="Minimum 5 years required for gratuity eligibility"
                                     aria-label="Completed years of service"
                                     Class="mb-4"/>
                </MudForm>
            </MudStack>
            <MudSpacer/>
        </MudStack>
    </MudPaper>

    <MudPaper class="pa-3 mx-3 rounded-lg"
              Style="background-color:#FAFAFA;"
              Elevation="0"
              role="region"
              aria-label="Results">
        <MudStack Justify="Justify.Center"
                  AlignItems="AlignItems.Center">
            <MudStack Class="mt-4"
                      Style="width:100%;max-width:420px;"
                      role="list"
                      aria-label="Calculation results summary">
                <MudPaper Outlined="true"
                          Style="background-color:#FAFAFA;"
                          Class="px-3 py-2"
                          role="listitem">
                    <MudStack Row="true"
                              AlignItems="AlignItems.Center"
                              Justify="Justify.SpaceBetween">
                        <MudText Typo="Typo.h6"
                                 Style="font-weight:bold">
                            Gratuity Amount Payable
                        </MudText>
                        <MudText Typo="Typo.body1"
                                 aria-label="@($"Gratuity amount payable: {CalculateResult(_inputViewModel).GratuityAmountStr}")">
                            @CalculateResult(_inputViewModel).GratuityAmountStr
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudStack>
        </MudStack>
    </MudPaper>
</MudStack>

@code {

    private bool _isFormValid;

    private readonly GratuityInputViewModel _inputViewModel = new();

    private GratuityResultViewModel CalculateResult(GratuityInputViewModel input)
    {
        return Calculator.Compute(input);
    }

}