@page "/scsscalculator"
@page "/scsscalc"
@page "/scss-calculator"
@page "/scss-calc"
@page "/scss"

@inject ICalculator<ScssInputViewModel, ScssResultViewModel> Calculator

<PageTitle>SCSS Calculator</PageTitle>

<PageHeader BreadcrumbItems="@(
                             [
                                 new BreadcrumbItem("Calculators", "#"),
                                 new BreadcrumbItem("SCSS", null, true)
                             ])"
            ActionButtonHidden="true"/>

<MudStack Row="true"
          Wrap="Wrap.Wrap"
          Style="background-color:#FFFFFF;">
    @* Inputs Section *@
    <MudPaper class="pa-3 mx-3 rounded-lg"
              Style="background-color:#FAFAFA;"
              Elevation="0"
              role="region"
              aria-label="Input parameters">
        <MudStack Row="true">
            <MudStack Row="true">
                <MudForm @bind-IsValid="_isFormValid"
                         Model="_inputViewModel"
                         aria-label="SCSS calculation inputs">
                    <MudNumericField T="int"
                                     Culture="@(CultureInfo.GetCultureInfo("en-In"))"
                                     Format="N0"
                                     Margin="Margin.Dense"
                                     Adornment="Adornment.Start"
                                     AdornmentColor="Color.Tertiary"
                                     AdornmentIcon="@Icons.Material.Filled.CurrencyRupee"
                                     IconSize="Size.Small"
                                     Label="Principal Amount"
                                     Variant="Variant.Outlined"
                                     @bind-Value="_inputViewModel.PrincipalAmount"
                                     Min="10000"
                                     Max="100000000"
                                     Step="1000"
                                     HelperText="Enter amount between ₹10,000 and ₹10,00,00,000"
                                     aria-label="Principal amount in Indian Rupees"
                                     Class="mb-2"/>
                    <MudText Typo="Typo.caption"
                             Class="mb-2">
                        Fixed annual rate: 7.4% | Fixed tenure: 5 years
                    </MudText>
                </MudForm>
            </MudStack>
            <MudSpacer/>
        </MudStack>
    </MudPaper>

    @* Results Section *@
    <MudPaper class="pa-3 mx-3 rounded-lg"
              Style="background-color:#FAFAFA;"
              Elevation="0"
              role="region"
              aria-label="Results">
        <MudStack Justify="Justify.Center"
                  AlignItems="AlignItems.Center">
            <div role="img"
                 aria-label="@($"Donut chart showing principal amount of {CalculateResult(_inputViewModel).Inputs.PrincipalAmount:n0} rupees and total interest earned of {CalculateResult(_inputViewModel).TotalInterestEarned:n0} rupees")">
                <MudChart ChartType="ChartType.Donut"
                          Height="300px"
                          Width="300px"
                          @bind-SelectedIndex="@Index"
                          InputLabels="@_labels"
                          InputData="@Data"
                          LegendPosition="Position.Top">
                </MudChart>
            </div>
            <MudStack Class="mt-4"
                      Style="width:100%;max-width:420px;"
                      role="list"
                      aria-label="Calculation results summary">
                <MudPaper Outlined="true"
                          Style="background-color:#FAFAFA;"
                          Class="px-3 py-2"
                          role="listitem">
                    <MudStack Row="true"
                              AlignItems="AlignItems.Center"
                              Justify="Justify.SpaceBetween">
                        <MudText Typo="Typo.body2">
                            Principal Amount
                        </MudText>
                        <MudText Typo="Typo.body1"
                                 aria-label="@($"Principal amount: {CalculateResult(_inputViewModel).PrincipalAmountStr}")">
                            @CalculateResult(_inputViewModel).PrincipalAmountStr
                        </MudText>
                    </MudStack>
                </MudPaper>
                <MudPaper Outlined="true"
                          Style="background-color:#FAFAFA;"
                          Class="px-3 py-2"
                          role="listitem">
                    <MudStack Row="true"
                              AlignItems="AlignItems.Center"
                              Justify="Justify.SpaceBetween">
                        <MudText Typo="Typo.body2">
                            Total Interest
                        </MudText>
                        <MudText Typo="Typo.body1"
                                 aria-label="@($"Total interest earned: {CalculateResult(_inputViewModel).TotalInterestEarnedStr}")">
                            @CalculateResult(_inputViewModel).TotalInterestEarnedStr
                        </MudText>
                    </MudStack>
                </MudPaper>
                <MudPaper Outlined="true"
                          Style="background-color:#FAFAFA;"
                          Class="px-3 py-2"
                          role="listitem">
                    <MudStack Row="true"
                              AlignItems="AlignItems.Center"
                              Justify="Justify.SpaceBetween">
                        <MudText Typo="Typo.h6"
                                 Style="font-weight:bold">
                            Maturity Amount
                        </MudText>
                        <MudText Typo="Typo.body1"
                                 aria-label="@($"Maturity amount: {CalculateResult(_inputViewModel).MaturityAmountStr}")">
                            @CalculateResult(_inputViewModel).MaturityAmountStr
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudStack>
        </MudStack>
    </MudPaper>
</MudStack>

@code {

    private bool _isFormValid;

    private readonly ScssInputViewModel _inputViewModel = new();

    private int Index { get; set; } = -1;

    private readonly string[] _labels =
    [
        "Principal Amount",
        "Total Interest"
    ];

    private double[] Data
    {
        get
        {
            var result = CalculateResult(_inputViewModel);
            return [result.Inputs.PrincipalAmount, result.TotalInterestEarned];
        }
    }

    private ScssResultViewModel CalculateResult(ScssInputViewModel input)
    {
        return Calculator.Compute(input);
    }

}