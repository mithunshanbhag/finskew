@page "/emicalculator"
@page "/emicalc"
@page "/emi-calculator"
@page "/emi-calc"
@page "/emi"

@inject ICalculator<EmiInputViewModel, EmiResultViewModel> Calculator

<PageTitle>EMI Calculator</PageTitle>

<PageHeader BreadcrumbItems="@(
                             [
                                 new BreadcrumbItem("Calculators", "#"),
                                 new BreadcrumbItem("EMI", null, true)
                             ])"
            ActionButtonHidden="true"/>

<MudStack Row="true"
          Wrap="Wrap.Wrap"
          Style="background-color:#FFFFFF;">
    @* Inputs Section *@
    <MudPaper class="pa-3 mx-3 rounded-lg"
              Style="background-color:#FAFAFA;"
              Elevation="0"
              role="region"
              aria-label="Input parameters">
        <MudStack Row="true">
            <MudStack Row="true">
                <MudForm @bind-IsValid="_isFormValid"
                         Model="_inputViewModel"
                         aria-label="EMI calculation inputs">
                    <MudNumericField T="int"
                                     Culture="@(CultureInfo.GetCultureInfo("en-In"))"
                                     Format="N0"
                                     Margin="Margin.Dense"
                                     Adornment="Adornment.Start"
                                     AdornmentColor="Color.Tertiary"
                                     AdornmentIcon="@Icons.Material.Filled.CurrencyRupee"
                                     IconSize="Size.Small"
                                     Label="Loan Amount"
                                     Variant="Variant.Outlined"
                                     @bind-Value="_inputViewModel.PrincipalAmount"
                                     Min="10000"
                                     Max="100000000"
                                     Step="1000"
                                     HelperText="Enter amount between ₹10,000 and ₹10,00,00,000"
                                     aria-label="Loan amount in Indian Rupees"
                                     Class="mb-4"/>
                    <MudNumericField T="double"
                                     Margin="Margin.Dense"
                                     Adornment="Adornment.Start"
                                     AdornmentColor="Color.Tertiary"
                                     AdornmentIcon="@Icons.Material.Filled.Percent"
                                     IconSize="Size.Small"
                                     Label="Annual Interest Rate"
                                     Variant="Variant.Outlined"
                                     @bind-Value="_inputViewModel.AnnualInterestRate"
                                     Step="0.1"
                                     Min="0"
                                     Max="100"
                                     HelperText="Annual interest rate (0% to 100%)"
                                     aria-label="Annual interest rate as percentage"
                                     Class="mb-4"/>
                    <MudNumericField T="int"
                                     Margin="Margin.Dense"
                                     Adornment="Adornment.Start"
                                     AdornmentColor="Color.Tertiary"
                                     AdornmentIcon="@Icons.Material.Filled.AccessTime"
                                     IconSize="Size.Small"
                                     Label="Loan Tenure (Years)"
                                     Variant="Variant.Outlined"
                                     @bind-Value="_inputViewModel.LoanTenureInYears"
                                     Immediate="true"
                                     DebounceInterval="200"
                                     Step="1"
                                     Min="1"
                                     Max="50"
                                     HelperText="Loan tenure (1 to 50 years)"
                                     aria-label="Loan tenure in years"
                                     Class="mb-4"/>
                </MudForm>
            </MudStack>
            <MudSpacer/>
        </MudStack>
    </MudPaper>

    @* Results Section *@
    <MudPaper class="pa-3 mx-3 rounded-lg"
              Style="background-color:#FAFAFA;"
              Elevation="0"
              role="region"
              aria-label="Results">
        <MudStack Justify="Justify.Center"
                  AlignItems="AlignItems.Center">
            <div role="img"
                 aria-label="@($"Donut chart showing loan amount of {CalculateResult(_inputViewModel).Inputs.PrincipalAmount:n0} rupees and total interest of {CalculateResult(_inputViewModel).TotalInterest:n0} rupees")">
                <MudChart ChartType="ChartType.Donut"
                          Height="300px"
                          Width="300px"
                          @bind-SelectedIndex="@Index"
                          InputLabels="@_labels"
                          InputData="@Data"
                          LegendPosition="Position.Top">
                </MudChart>
            </div>
            <MudStack Class="mt-4"
                      Style="width:100%;max-width:420px;"
                      role="list"
                      aria-label="EMI calculation results summary">
                <MudPaper Outlined="true"
                          Style="background-color:#FAFAFA;"
                          Class="px-3 py-2"
                          role="listitem">
                    <MudStack Row="true"
                              AlignItems="AlignItems.Center"
                              Justify="Justify.SpaceBetween">
                        <MudText Typo="Typo.body2">
                            Loan Amount
                        </MudText>
                        <MudText Typo="Typo.body1"
                                 aria-label="@($"Loan amount: {CalculateResult(_inputViewModel).Inputs.PrincipalAmount.ToString("C0", CalculateResult(_inputViewModel).Inputs.Culture)}")">
                            @CalculateResult(_inputViewModel).Inputs.PrincipalAmount.ToString("C0", CalculateResult(_inputViewModel).Inputs.Culture)
                        </MudText>
                    </MudStack>
                </MudPaper>
                <MudPaper Outlined="true"
                          Style="background-color:#FAFAFA;"
                          Class="px-3 py-2"
                          role="listitem">
                    <MudStack Row="true"
                              AlignItems="AlignItems.Center"
                              Justify="Justify.SpaceBetween">
                        <MudText Typo="Typo.body2">
                            Monthly EMI
                        </MudText>
                        <MudText Typo="Typo.body1"
                                 aria-label="@($"Monthly EMI: {CalculateResult(_inputViewModel).MonthlyEmiStr}")">
                            @CalculateResult(_inputViewModel).MonthlyEmiStr
                        </MudText>
                    </MudStack>
                </MudPaper>
                <MudPaper Outlined="true"
                          Style="background-color:#FAFAFA;"
                          Class="px-3 py-2"
                          role="listitem">
                    <MudStack Row="true"
                              AlignItems="AlignItems.Center"
                              Justify="Justify.SpaceBetween">
                        <MudText Typo="Typo.body2">
                            Total Amount
                        </MudText>
                        <MudText Typo="Typo.body1"
                                 aria-label="@($"Total amount: {CalculateResult(_inputViewModel).TotalPaymentStr}")">
                            @CalculateResult(_inputViewModel).TotalPaymentStr
                        </MudText>
                    </MudStack>
                </MudPaper>
                <MudPaper Outlined="true"
                          Style="background-color:#FAFAFA;"
                          Class="px-3 py-2"
                          role="listitem">
                    <MudStack Row="true"
                              AlignItems="AlignItems.Center"
                              Justify="Justify.SpaceBetween">
                        <MudText Typo="Typo.h6"
                                 Style="font-weight:bold">
                            Total Interest
                        </MudText>
                        <MudText Typo="Typo.body1"
                                 aria-label="@($"Total interest: {CalculateResult(_inputViewModel).TotalInterestStr}")">
                            @CalculateResult(_inputViewModel).TotalInterestStr
                        </MudText>
                    </MudStack>
                </MudPaper>
            </MudStack>
        </MudStack>
    </MudPaper>

    @* Growth Section *@
    <MudPaper class="pa-3 mx-3 rounded-lg"
              Style="background-color:#FAFAFA;"
              Elevation="0"
              role="region"
              aria-label="Growth over time">
        <MudStack Justify="Justify.Center"
                  AlignItems="AlignItems.Center">
            <MudSimpleTable Dense="true"
                            Bordered="true"
                            Elevation="0"
                            aria-label="Table showing yearly amount paid towards loan">
                <thead>
                <tr>
                    <th align="center">Year</th>
                    <th align="right">Amount Paid Towards Loan</th>
                </tr>
                </thead>
                <tbody>
                @{
                    var result = CalculateResult(_inputViewModel);
                    for (var year = 1; year <= result.YearlyGrowth.Length; year++)
                    {
                        <tr>
                            <td align="center">@year</td>
                            <td align="justify"
                                aria-label="@($"Amount paid towards loan at the end of year {year}: {result.YearlyGrowth[year - 1]} rupees")">
                                @result.YearlyGrowthAsStr[year - 1]
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </MudSimpleTable>
        </MudStack>
    </MudPaper>
</MudStack>

@code {

    private bool _isFormValid;

    private readonly EmiInputViewModel _inputViewModel = new();

    private int Index { get; set; } = -1;

    private readonly string[] _labels =
    [
        "Loan Amount",
        "Total Interest"
    ];

    private double[] Data
    {
        get
        {
            var result = CalculateResult(_inputViewModel);
            return [result.Inputs.PrincipalAmount, result.TotalInterest];
        }
    }

    private EmiResultViewModel CalculateResult(EmiInputViewModel input)
    {
        return Calculator.Compute(input);
    }

}